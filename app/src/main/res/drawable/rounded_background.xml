<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna solid hitam transparan untuk kontras yang baik di AR -->
    <solid android:color="#80000000" />

    <!-- Sudut melengkung dari versi Anda -->
    <corners android:radius="16dp" />

    <!-- Padding dari versi Anda untuk memberi ruang pada teks -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
